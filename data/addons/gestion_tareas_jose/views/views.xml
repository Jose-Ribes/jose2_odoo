<odoo>
  <data>
    <!-- Vista de lista -->
    <record model="ir.ui.view" id="gestion_tareas_jose.list">
      <field name="name">gestion_tareas_jose list</field>
      <field name="model">gestion_tareas_jose.tareas_jose</field>
      <field name="arch" type="xml">
        <list>
          <field name="codigo"/>
          <field name="name"/>
          <field name="descripcion"/>
          <field name="finalizado"/>
        </list>
      </field>
    </record>

    <!-- Vista de formulario -->
    <record model="ir.ui.view" id="gestion_tareas_jose.form">
      <field name="name">gestion_tareas_jose form</field>
      <field name="model">gestion_tareas_jose.tareas_jose</field>
      <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <field name="codigo"/>
                    <field name="name"/>
                    <field name="descripcion"/>
                    <field name="finalizado"/>
                </group>
                <group>
                    <field name="fecha_creacion"/>
                    <field name="fecha_ini"/>
                    <field name="fecha_fin"/>
                    <field name="sprint"/>
                    <field name="rel_tecnologias" widget="many2many_tags"/>
                </group>
            </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="gestion_tareas_jose.action_tareas_window">
      <field name="name">gestion_tareas_jose window</field>
      <field name="res_model">gestion_tareas_jose.tareas_jose</field>
      <field name="view_mode">list,form</field>
    </record>

    <record model="ir.actions.act_window" id="gestion_tareas_jose.action_sprints_window">
      <field name="name">gestion_sprints_jose window</field>
      <field name="res_model">gestion_tareas_jose.sprints_jose</field>
      <field name="view_mode">list,form</field>
    </record>

