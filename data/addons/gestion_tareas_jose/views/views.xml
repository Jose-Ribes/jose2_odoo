    <!-- Top menu item -->
    <menuitem name="Gestor Tareas" id="gestion_tareas_jose.menu_root"/>
    <!-- menu categories -->
    <menuitem name="Tareas" id="gestion_tareas_jose.tareas" parent="gestion_tareas_jose.menu_root"/>
    <menuitem name="Sprints" id="gestion_tareas_jose.sprints" parent="gestion_tareas_jose.menu_root"/>
<!--
    <menuitem name="Menu 2" id="gestion_tareas_jose.menu_2" parent="gestion_tareas_jose.menu_root"/>
-->
