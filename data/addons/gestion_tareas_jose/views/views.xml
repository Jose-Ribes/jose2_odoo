    <menuitem name="List" id="gestion_tareas_jose.tareas_list" parent="gestion_tareas_jose.tareas"
              action="gestion_tareas_jose.action_tareas_window"/>
    <menuitem name="Listado Sprints" id="gestion_tareas_jose.sprints_list" parent="gestion_tareas_jose.sprints"
              action="gestion_tareas_jose.action_sprints_window"/>
